<div class="container">

<h1>My Tasks</h1>

<ul class="list-group">
<% @tasks.each do |task| %>
  <li class="list-group-item">
  <% if task.completed == true %>
  <i class="fa-solid fa-square-check"></i>
  <% else %>
  <i class="fa-regular fa-square"></i>
  <% end %>
  <%= link_to task.title, task_path(task) %>
  </li>
<% end  %>
</ul>

<button type="button" class="btn btn-dark"><%= link_to 'Add new task', tasks_new_path %></button>

</div>
